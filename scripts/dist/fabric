#!/bin/bash

set -e

IPA_NAME="$(ls ./build | grep ipa)"

if [[ -z "$IPA_NAME" ]]; then
    echo 'Invalid IPA'
    exit 1
fi

IPA_PATH="./build/$IPA_NAME"
TESTERS='ios,qc'
FABRIC_API_KEY=''
FABRIC_BUILD_SECRET=''

# Upload to Fabric
export PODS_ROOT='./Pods'
SUBMIT="$PODS_ROOT/Crashlytics/submit"
/bin/bash "$SUBMIT" \
    "$FABRIC_API_KEY" \
    "$FABRIC_BUILD_SECRET" \
    -ipaPath "$IPA_PATH" \
    -groupAliases "$TESTERS" \
    -notifications YES
